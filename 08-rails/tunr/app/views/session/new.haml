%p.text-center
  %img.img-circle(src = 'https://fillmurray.com/100/100')
  %span.glyphicon.glyphicon-heart-empty

- if flash[:error].present?
  %p.bg-warning= flash[:error]

= form_tag '/login', :class => 'form-inline' do
  %div.form-group
    = label_tag :email
    = text_field_tag :email, nil, :autofocus => true, :required => true, :class => 'form-control'
  %div.form-group
    = label_tag :password
    = password_field_tag :password, nil, :required => true, :class => 'form-control'
  = submit_tag 'Login', :class => 'btn btn-primary'
