<h2>Edit Butterfly</h2>
<form action="/butterflies/<%= @butterfly['id'] %>" method="post">
  <label for="">Name:</label>
  <input type="text" name="name" value="<%= @butterfly['name'] %>">
  <label for="">Family:</label>
  <input type="text" name="family" value="<%= @butterfly['family'] %>">
  <label for="">Image:</label>
  <input type="url" name="image" value="<%= @butterfly['image'] %>">

  <label for="">Plant:</label>
  <select name="plant_id">
    <option></option>
    <% Plant.all.each do |plant| %>
      <option value="<%= plant['id'] %>" <%= 'selected' if @butterfly.plant_id == plant.id %> ><%= plant['name'] %></option>
    <% end %>
  </select>

  <button>Update butterfly</button>
</form>